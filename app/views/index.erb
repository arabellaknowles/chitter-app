<h1>Welcome to Chitter</h1>
<%= flash[:notice] %>

<% if session[:current_user_id] %>
  <form method='post' action='/peeps'>
    <label>Make a peep:</label>
    <input name='peep_text' type='text' placeholder='250 characters max'>
    <input type='submit' value='Post'>
  </form>
  <form method='post' action='/sessions'>
    <input type="hidden" name="_method" value="DELETE">
    <input type='submit' value='Sign out'>
  </form>
<% else %>
  <form method='get' action='registrations/new'>
    <input type='submit' value='Sign up'>
  </form>
  <form method='get' action='sessions/new'>
    <input type='submit' value='Sign in'>
  </form>
<% end %>

<ul>
  <% @peeps.each do |peep| %>
    <li>
      <%= peep.peep %>
      <%= peep.created_at%>
      <%= User.find_by_id(peep.user_id)['full_name'] %>
    </li>
  <% end %>
</ul>
